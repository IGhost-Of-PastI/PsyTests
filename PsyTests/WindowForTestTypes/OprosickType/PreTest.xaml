<Page x:Class="PsyTests.PreTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsyTests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Информация о тесте">
    <ScrollViewer VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Image x:Name="ImageBox" Grid.Row="0"></Image>
            <TextBlock Height="Auto" x:Name="Name" Text="" Grid.Row="1"></TextBlock>
            <TextBlock Height="Auto" x:Name="Opis" Text="" Grid.Row="2"></TextBlock>
            <TextBlock Height="Auto" x:Name="Algorith" Text="" Grid.Row="3"></TextBlock>
            <Button Style="{DynamicResource ButtonExit}" Foreground="White" FontSize="36" x:Name="Start" Content="Начать" Grid.Row="4" Click="Start_Click"></Button>
        </Grid>
    </ScrollViewer>
</Page>
