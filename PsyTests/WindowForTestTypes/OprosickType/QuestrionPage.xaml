<Page x:Class="PsyTests.QuestrionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsyTests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestrionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Question" Grid.ColumnSpan="2"></TextBlock>
        <StackPanel x:Name="RadiobuttonsPanel" Orientation="Vertical" Grid.Row="1">
            <RadioButton Checked="RadioButton_Checked" Content="Совершенно верно"></RadioButton>
            <RadioButton Checked="RadioButton_Checked" Content="Сокорее верно"></RadioButton>
            <RadioButton Checked="RadioButton_Checked" Content="Сложно сказать"></RadioButton>
            <RadioButton Checked="RadioButton_Checked" Content="Скорее неверно"></RadioButton>
            <RadioButton Checked="RadioButton_Checked" Content="Совершенно неверно"></RadioButton>

        </StackPanel>
    </Grid>
</Page>
